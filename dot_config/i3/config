# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	position top
  font pango: "Hack Nerd Mono" 18
    colors {
        background #282828
        statusline $text
        separator $bg1

        focused_workspace  $orange $green $bg0
        active_workspace   $green $orange $bg0
        inactive_workspace $bg0 $blue $bg0
        urgent_workspace   $text $red $bg0
        #binding_mode       #2f343a #900000 #ffffff
    }

    status_command i3status-rs
}

